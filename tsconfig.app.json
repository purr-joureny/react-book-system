{
    "compilerOptions": {
        // 启用增量编译，提高编译速度
        "incremental": true,
        // 增量编译文件的存储位置
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        // 编译目标 JS 版本
        "target": "ES2020",
        // 使用 define 关键字声明类字段
        "useDefineForClassFields": true,
        // 需要包含的库文件
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        // 使用的模块系统
        "module": "ESNext",
        // 跳过库文件的类型检查，加快编译速度
        "skipLibCheck": true,
        /* Bundler 模式配置 */
        // 设置模块解析策略
        "moduleResolution": "Bundler",
        // 允许导入 .ts/.tsx 文件时省略文件扩展名
        "allowImportingTsExtensions": true,
        // 确保每个文件都被视为单独的模块
        "isolatedModules": true,
        // 强制模块检测
        "moduleDetection": "force",
        // 不生成输出文件
        "noEmit": true,
        // React JSX 支持
        "jsx": "react-jsx",
        /* 代码检查配置 */
        // 启用所有严格的类型检查选项
        "strict": true,
        // 报告未使用的局部变量
        "noUnusedLocals": true,
        // 报告未使用的参数
        "noUnusedParameters": true,
        // 防止 switch 语句中的 case 贯穿
        "noFallthroughCasesInSwitch": true
    },
    // 需要编译的源码目录
    "include": [
        "src"
    ]
}